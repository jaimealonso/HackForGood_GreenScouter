<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#1D551D" />
      <stroke
          android:width="1dp"
          android:color="#1D551D" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="7dp"
          android:top="7dp"
          android:right="7dp"
          android:bottom="7dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#179B0E"
          android:endColor="#1ACB0E"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#002900" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="7dp"
          android:top="7dp"
          android:right="7dp"
          android:bottom="7dp" />
    </shape>
  </item>
</selector>
